<body>
  {{! Page Header }}
  <header>
    <h1>User Registration</h1>
  </header>

  {{! Registration Form }}
  <section>
    <form action="/register" method="POST" id="registration-form">
      <div id="form-error-container" class="hidden">
        <span class="error-message"></span>
      </div>
      <div class="form-group">
        <label for="firstNameInput">First Name:</label>
        <input type="text" name="firstNameInput" id="firstNameInput" required />
      </div>

      <div class="form-group">
        <label for="lastNameInput">Last Name:</label>
        <input type="text" name="lastNameInput" id="lastNameInput" required />
      </div>

      <div class="form-group">
        <label for="emailAddressInput">Email Address:</label>
        <input
          type="email"
          name="emailAddressInput"
          id="emailAddressInput"
          required
        />
      </div>

      <div class="form-group">
        <label for="passwordInput">Password:</label>
        <input
          type="password"
          name="passwordInput"
          id="passwordInput"
          required
        />
      </div>

      <div class="form-group">
        <label for="confirmPasswordInput">Confirm Password:</label>
        <input
          type="password"
          name="confirmPasswordInput"
          id="confirmPasswordInput"
          required
        />
      </div>

      <div class="form-group">
        <label for="roleInput">Role:</label>
        <select name="roleInput" id="roleInput" required>
          <option value="user">User</option>
          <option value="admin">Admin</option>
        </select>
      </div>

      <button type="submit">Register</button>
    </form>

    <!-- Link to login page -->
    <p>Already have an account? <a href="/login">Click here to log-in</a></p>
  </section>
  <script src="/public/js/clientValidation.js"></script>

</body>